div.chart-wrap
    <div class="tradingview-widget-container">
        div#tradingview_69a92
        button#closeChart

        script(type="text/javascript" src="https://s3.tradingview.com/tv.js")
        script.
            new TradingView.widget(
                {
                "width": 550,
                "height": 360,
                "symbol": "BINANCE:BTCUSDT",
                "interval": "D",
                "timezone": "Etc/UTC",
                "theme": "dark",
                "style": "1",
                "locale": "kr",
                "toolbar_bg": "#f1f3f6",
                "enable_publishing": false,
                "allow_symbol_change": true,
                "container_id": "tradingview_69a92"
                }
            );

    style.
        .chart-wrap{
            position: fixed;
            bottom: 1rem;
            left: -550px;
            width: 550px;
            height: 360px;
            transition: 0.6s ease;
            overflow: hidden;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
            border-radius: 3px;
            z-index: 8500;
        }
        #closeChart {
            position: absolute;
            top: 10px; right: 10px;
            width: 30px; height: 30px;
            padding: 0;
            border: none;
            border-radius: 20px;
            background: #fff;
            z-index: 100;
        }
        #closeChart:after {
            content: '';
            position: absolute;
            top: 50%; left: 50%;
            transform: translate(-50%, -50%) rotate(45deg);
            width: 3px; height: 60%;
            border-radius: 2px;
            background-color: #000;            
        }
         #closeChart:before {
            content: '';
            position: absolute;
            top: 50%; left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            width: 3px; height: 60%;
            border-radius: 2px;
            background-color: #000;            
        }
        .chart-show { left: calc(280px + 1rem); }
        @media screen and (max-width: 900px) {
            .chart-wrap{
                left: 110%; bottom: 4rem;
                z-index: 9500;
            }
            .chart-show {
                left: 50%; bottom: 4rem;
                transform: translate(-50%, 0);
            }                
        }