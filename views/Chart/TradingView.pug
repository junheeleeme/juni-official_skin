div.chart-wrap
    <div class="tradingview-widget-container">
        div#tradingview_69a92
            //- div.class="tradingview-widget-copyright"> TradingView 제공 <a href="https://kr.tradingview.com/symbols/BTCUSDT/?exchange=BINANCE" rel="noopener" target="_blank"><span class="blue-text">BTCUSDT 차트</span></a></div>
        button#closeChart
            i(class="bx bxs-left-arrow-alt")

        script(type="text/javascript" src="https://s3.tradingview.com/tv.js")
        script.
            new TradingView.widget(
                {
                "width": 550,
                "height": 360,
                "symbol": "BINANCE:BTCUSDT",
                "interval": "D",
                "timezone": "Etc/UTC",
                "theme": "dark",
                "style": "1",
                "locale": "kr",
                "toolbar_bg": "#f1f3f6",
                "enable_publishing": false,
                "allow_symbol_change": true,
                "container_id": "tradingview_69a92"
                }
            );

    style.
        .chart-wrap{
            position: fixed;
            bottom: 1rem;
            left: -550px;
            width: 550px;
            height: 360px;
            transition: 0.6s ease;
            overflow: hidden;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
            border-radius: 3px;
            z-index: 100;
        }
        #closeChart {
            position: absolute;
            top: 10px; right: 10px;
            width: 30px; height: 30px;
            padding: 0;
            color: #fff;
            border: none;
            border-radius: 20px;
            background: #9b9b9b;
            z-index: 100;
        }