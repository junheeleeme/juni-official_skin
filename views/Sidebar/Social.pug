div.today-wrap
    a.githubBtn(href="https://github.com/junheeleeme" target="_blank")
        i(class="bx bx-md bxl-github")
    a.instaBtn(href="https://www.instagram.com/ju_ni_official/" target="_blank")
        i(class="bx bx-md bxl-instagram")
    a.chartToggle(href="javascript:void(0)")
        i(class="bx bx-md bxl-bitcoin")

    script.
        const btnToggle = document.querySelector('.chartToggle');
        btnToggle.addEventListener('click', (e)=> {
            e.preventDefault();
            const chart = document.querySelector('.chart-wrap');
            if (chart.style.left === '') {
                chart.style.left = "calc(280px + 1rem)";
                btnToggle.children[0].classList.add('bitcoin')
            } else {
                chart.style.left = "";
                btnToggle.children[0].classList.remove('bitcoin')
            }
        })
        const closeBtn = document.querySelector('#closeChart');
        closeBtn.addEventListener('click', (e)=> {
            const chart = document.querySelector('.chart-wrap');
            chart.style.left = "";
        })

    style.
        .today-wrap{
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
        .today-wrap > a { margin: 0 0 0 1.2rem; }
        .githubBtn {
            width: 28px;
            height: 28px;
            border-radius: 15px;
        }
        .instaBtn {
            width: 27px;
            height: 27px;
            border-radius: 8px;
        }
        .instaBtn>i { margin-top: 1px; }
        .chartToggle{
            width: 29px;
            height: 29px;
            border-radius: 15px;
        }
        .githubBtn, .instaBtn, .chartToggle {
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
            overflow: hidden;
        }
        .bxl-github {
            background: #fff;
            color: #000;
        }
        .bxl-bitcoin{
            transition: 0.6s ease;
            color: #f7931a;
        }
        .bxl-instagram { color: #bc2a8d; }
        .bitcoin { color: #b95aff; }