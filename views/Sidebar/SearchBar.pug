div.search-wrap
    input.search-input
    div.search-icon
        i(class="bx bx-search bx-sm")

    style.
        .search-wrap {
            position: relative;
            margin-top: 15px;
        }
        .search-input {
            width: 100%; height: 38px;
            padding: 8px 9px 8px 36px;
            font-size: 16px;
            color: #c3c8cc;
            border: none;
            outline: 0;
            background-color: #2c3e50;
            border-radius: 19px;
        }
        .search-icon {
            position: absolute;
            top: 53%; left: 8px;
            transform: translate(0, -50%);
            display: flex;
            color: #fff;
            justify-content: center;
            align-items: center;
            z-index: 1;
        }
        .bx-search { color: #fff; }

    script.
        const tmp = window.location.pathname
        const searchTxt = tmp?.split('/search/')[1]
        const searchInput = document.querySelector(".search-input");
        const searchIcon = document.querySelector(".bx-search");
        if(searchTxt) searchInput.value = decodeURI(searchTxt)
        window.addEventListener('load', () => {
            if(searchTxt) window.scroll({top : window.innerHeight - 55, behavior: 'smooth'});
        })
        if(searchTxt) window.scroll({top : window.innerHeight - 55, behavior: 'smooth'});

        searchInput.addEventListener('keydown', (e)=>{ //검색
            if(e.keyCode === 13) location.href = `/search/${encodeURI(e.target.value)}`;
        })
        searchInput.addEventListener('focus', (e)=>{ //검색
            searchIcon.classList.add('bx-tada')
        })
        searchInput.addEventListener('blur', (e)=>{ 
            searchIcon.classList.remove('bx-tada')
        })