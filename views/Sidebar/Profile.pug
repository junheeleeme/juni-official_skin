    style.
        .profile-wrap {
            z-index: 9000;
            width: 248px;
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
        }
        .img-wrap{
            position: relative;
            width: 80px;
            height: 80px;
            border-radius: 40px;
        }
        .img-wrap::after {
            content: '👻';
            position: absolute;
            bottom: 8px; right: 8px;
            width: 20px; height: 20px;
            font-size: 2rem;
            z-index: 9000;
        }
        .profile-img{
            width: 80px; height: 80px;
            border-radius: 40px;
            z-index: 9000;
            box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
        }
        .todayCnt {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            width: 100%; height: 80px;
        }
        .todayCnt>li:first-child {
            margin-left: 0.8rem;
        }
        .todayCnt>li {
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }
        .todayCnt>li>.cntTxt{
            margin-bottom: 0.5rem;
            font-weight: bold;
        }
        .todayCnt>li>.cntTitle{
            display: block;
            font-size: 0.85rem;
            white-space: nowrap;
        }
        .profile-msg {
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            justify-content: flex-start;
            align-items: flex-start;
            color: #fff;
            padding: 10px 8px;
            border-radius: 5px;
            background: rgba(0,0,0,0.38);
            z-index: 1;
        }
        .profile-msg > span {
            width: 100%;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            text-align: center;
        }