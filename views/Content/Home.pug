    style.
        .blog-main-wrap {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: calc(100vh - 55px);
            background-color: #cecece;
            transition: background-color 0.3s ease;
            user-select: none;
        }
        .dark .blog-main-wrap {
            background-color: #2b2e35;
        }
        .effect-wrap {
            position: relative;
            width: 500px;
            height: 70px;
            white-space: nowrap;
        }
        .focus, .mask {
            letter-spacing: 2px;
            font-size: 65px;
            font-family: Arial;
            text-transform: uppercase;
            color: #fff;
        }
        .focus {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            filter: blur(3px);
            opacity: 0.6;
        }
        .mask {
            position: absolute;
            left: -7px;
            top: -2px;
            width: 70px;
            font-weight: bold;
            clip: rect(0px,70px,75px,0px);
            background: linear-gradient(#fff, #fff 0) no-repeat,
                linear-gradient(to right, #fff, #fff 0) no-repeat,
                linear-gradient(to right, #fff, #fff 0) bottom left no-repeat,
                linear-gradient(to right, #fff, #fff 0) bottom left no-repeat,
                linear-gradient(#fff, #fff 0) bottom right no-repeat,
                linear-gradient(#fff, #fff 0) bottom right no-repeat,
                linear-gradient(#fff, #fff 0) top right no-repeat,
                linear-gradient(#fff, #fff 0) top right no-repeat;
            background-size: 10px 2px, 2px 10px, 2px 10px, 10px 2px, 2px 10px, 10px 2px, 10px 2px, 2px 10px, 10px 2px;
            padding: 5px;
            transform: translateX(0);
            box-sizing: border-box;
            animation: mask 3s ease infinite alternate;
        }
        .blogTitle {
            color: #fff !important;
            transform: translateX(0);
            animation: text 3s ease infinite alternate;
        }

        @keyframes mask { 
            to { transform: translateX(450px); } 
        }
        @keyframes text { 
            to { transform: translateX(-450px); } 
        }
        @keyframes maskM { 
            to { transform: translateX(280px); } 
        }
        @keyframes textM { 
            to { transform: translateX(-280px); } 
        }

        .mouse {
            position: absolute;
            bottom: 2rem; left: 50%;
            transform: translate(-50%, 0);
            display: flex;
            width: 30px; height: 50px;
            border: 1px solid #fff;
            border-radius: 20px;
            transition: opacity 0.3s ease;
        }
        .mouse-wheel {
            width: 10px;
            height: 10px;
            background-color: #fff;
            border-radius: 50%;
            margin: auto;
            animation: move-wheel 1.25s linear infinite;
        }
        .dark .mouse { border: 1px solid #696969; }
        .dark .mouse-wheel { background-color: #b3b3b3; }
        
        @media screen and (max-width: 700px) {
            .effect-wrap { width: 320px; }
            .focus, .mask { font-size: 40px; }
            .blogTitle { animation: textM 3s ease infinite alternate;}
            .mask {
                top: 10px;
                width: 50px;
                animation: maskM 3s ease infinite alternate;
                clip: rect(0px, 50px, 55px, 0px);
            }
            .mouse { bottom: calc(50% - 200px); }
            _::-webkit-full-page-media, _:future, :root .focus,
            _::-webkit-full-page-media, _:future, :root .mask {
                font-size: 42px;
            }
        }

        @keyframes move-wheel {
            0% {
                opacity: 0;
                transform: translateY(-1rem);
            }
            100% {
                opacity: 1;
                transform: translateY(1rem);
            }
        }

        .post-list-wrap{
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 0;
        }
        .article-header{
            display: flex;
            flex-wrap: nowrap;
            flex-direction: row;
            justify-content: space-around;
            align-items: center;
            padding: 15px 0;
        }
        .article-header > h2{
            max-width: 544px; 
            width: 100%; 
        }
        .article-head-txt { 
            font-size: 1.25rem; 
            text-align: right;
        }
        .article-wrap{
            position: relative;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: center;
            align-content: center;
            padding: 20px 0;            
        }
        .post-item{ 
            position: relative;
            max-width: 544px; 
            width: 100%;
            margin-bottom: 60px;
        }
        .post-thumb-wrap { 
            position: relative;
            width: 100%; height: 327px;
            border-radius: 3px;
            box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
            overflow: hidden;
        }
        .post-thumb {
            display: inline-block;
            width: 100%; height: 100%;
        }
        .post-article-title {
            font-size: 1.38rem;
            font-weight: bold;
            margin: 25px 0 10px 0;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
        }
        .post-summary {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom: 20px;
        }
        .post-commentCnt {
            color: #fff;
        }
        .post-date {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            font-size: 16px;
        }
        .bxs-cat {
            position: absolute;
            top: -43px; left: 0px;
            opacity: 0;
            transition: 0.3s ease;
            animation: catWorking 6.6s ease infinite;
        }
        .post-item:hover > .bxs-cat { opacity: 1; }

        @media screen and (max-width: 1400px) {
            .article-wrap {
                justify-content: center;
                flex-direction: column;
            }
            .article-header{
                max-width: 767px;
                margin: 1rem auto 0 auto;
            }
            .post-item { max-width: 767px; }
            .post-thumb-wrap { height: 460px; }
            .post-article-title { font-size: 1.7rem; }
        }
        @media screen and (max-width: 1080px) {
            .post-thumb-wrap {
                height: calc( (100vw - (280px + 2rem)) /5 * 3 );
            }
            .post-list-wrap {
                padding: 0 1rem;
            }
        }
        @media screen and (max-width: 900px) {
            .post-thumb-wrap {
                height: 460px;
            }
        }
        @media screen and (max-width: 799px) {
            .article-wrap { padding: 10px 0; }
            .article-head-txt { 
                font-size: 1rem; 
                text-align: right;
            }
            .post-thumb-wrap { height: calc((100vw - 2rem) / 5 * 3); }
            .post-article-title { 
                margin: 20px 0 8px 0;
                font-size: 1.25rem; 
            }
  
        }
        @media screen and (max-width: 799px) {
            .post-thumb-wrap { 
                border-radius: 5px;
            }
        } 

        @keyframes catWorking {
            0% { 
                left: 0; 
                transform: scaleX(1); 
            }
            40% { 
                transform: scaleX(1); 
            }
            50% { 
                left: calc(100% - 50px); 
                transform: scaleX(-1);
            }
            90% { 
                transform: scaleX(-1);
            }
            100% { 
                left: 0;  
                transform: scaleX(1);
            }
        }
    
    script.
        const scrollEl = document.querySelector('.mouse')
        const targetH = scrollEl?.getBoundingClientRect().top - 150;

        if(scrollEl !== null) {
            window.addEventListener('scroll', ()=> {
                const top = window.scrollY;
                const op = scrollEl.style.opacity
                if(top > targetH) scrollEl.style.opacity = 0;
                else if(top < targetH) scrollEl.style.opacity = 1;
            }, {passive:true})
        }