s_list
    include MainIntro     
    section.post-list-wrap    
        section.article-header
            h2.blank
            h2.article-head-txt [##_list_conform_##] ([##_list_count_##])
        section.article-wrap
            s_list_rep
                article.post-item
                    i(class="bx bxs-cat bx-lg")
                    a.post-link(href="[##_list_rep_link_##]")
                        div.post-thumb-wrap(style="background: url('[##_image_##]') no-repeat center / 100%;")
                            s_list_rep_thumbnail
                                img.post-thumb(src="[##_list_rep_thumbnail_##]" alt="Post Thumbnail")
                        div.post-bottom-wrap
                            h2.post-article-title [##_list_rep_title_##]
                            p.post-summary [##_list_rep_summary_##]
                            p.post-date [##_list_rep_regdate_##] -&nbsp; 
                                span.post-commentCnt [##_list_rep_rp_cnt_##]

    style.
        .post-list-wrap{
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 0;
        }
        .article-header{
            display: flex;
            flex-wrap: nowrap;
            flex-direction: row;
            justify-content: space-around;
            align-items: center;
            padding: 15px 0;
        }
        .article-header > h2{
            max-width: 544px; 
            width: 100%; 
        }
        .article-head-txt { 
            font-size: 1.25rem; 
            text-align: right;
        }
        .article-wrap{
            position: relative;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: center;
            align-content: center;
            padding: 20px 0;            
        }
        .post-item{ 
            position: relative;
            max-width: 544px; 
            width: 100%;
            margin-bottom: 60px;
        }
        .post-thumb-wrap { 
            position: relative;
            width: 100%; height: 327px;
            border-radius: 3px;
            box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
            overflow: hidden;
        }
        .post-thumb {
            display: inline-block;
            width: 100%; height: 100%;
        }
        .post-article-title {
            font-size: 1.38rem;
            font-weight: bold;
            margin: 25px 0 10px 0;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
        }
        .post-summary {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom: 20px;
        }
        .post-commentCnt {
            color: #fff;
        }
        .post-date {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            font-size: 16px;
        }
        .bxs-cat {
            position: absolute;
            top: -43px; left: 0px;
            opacity: 0;
            transition: 0.3s ease;
            animation: catWorking 6.6s ease infinite;
        }
        .post-item:hover > .bxs-cat { opacity: 1; }

        @media screen and (max-width: 1400px) {
            .article-wrap {
                justify-content: center;
                flex-direction: column;
            }
            .article-header{
                max-width: 767px;
                margin: 1rem auto 0 auto;
            }
            .post-item { max-width: 767px; }
            .post-thumb-wrap { height: 460px; }
            .post-article-title { font-size: 1.7rem; }
        }
        @media screen and (max-width: 1080px) {
            .post-thumb-wrap {
                height: calc( (100vw - (280px + 2rem)) /5 * 3 );
            }
            .post-list-wrap {
                padding: 0 1rem;
            }
        }
        @media screen and (max-width: 900px) {
            .post-thumb-wrap {
                height: 460px;
            }
        }
        @media screen and (max-width: 799px) {
            .article-wrap { padding: 10px 0; }
            .article-head-txt { 
                font-size: 1rem; 
                text-align: right;
            }
            .post-thumb-wrap { height: calc((100vw - 2rem) / 5 * 3); }
            .post-article-title { 
                margin: 20px 0 8px 0;
                font-size: 1.25rem; 
            }
  
        }
        @media screen and (max-width: 799px) {
            .post-thumb-wrap { 
                border-radius: 5px;
            }
        } 

        @keyframes catWorking {
            0% { 
                left: 0; 
                transform: scaleX(1); 
            }
            40% { 
                transform: scaleX(1); 
            }
            50% { 
                left: calc(100% - 50px); 
                transform: scaleX(-1);
            }
            90% { 
                transform: scaleX(-1);
            }
            100% { 
                left: 0;  
                transform: scaleX(1);
            }
        }
    
