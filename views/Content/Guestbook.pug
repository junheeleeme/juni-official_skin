    style.
        #entry0Comment ~ .paging { display: none; }
        .guestbook-wrap {
            max-width: 748px;
            margin: 0 auto;
            padding: 2rem 0;
        }
        @media screen and (max-width: 1080px) {
            .guestbook-wrap { padding: 1rem; }
        }
        .guestbook-header {
            display: flex;
            flex-wrap: nowrap;
            flex-direction: row;
            justify-content: space-around;
            align-items: center;
            padding: 15px 0;
            margin: 0 0 20px 0;
        }
        .guestbook-header > h2{
            max-width: 544px; 
            font-weight: bold;
            width: 100%; 
        }
        .guestbook-header-txt {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            font-size: 24px; 
            text-align: right;
        }
        .bx-ghost {
            color: #0e235f;
            margin-right: 10px;
        }
        .dark .bx-ghost { color: #b3b8bd; }
        .commend-input > textarea {
            display: block;
            color: #777777;
            width: 100%;
            height: 80px;
            padding: 10px;
            border: 1px solid #cccccc;
            font-size: 16px;
            letter-spacing: 1px;
            resize: none;
            outline: none;
            transition: background-color 0.3s ease, color 0.3s ease, border 0.3s ease;
        }
        .guestbook-secret {
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
        .control-btn-wrap > button {
            padding: 0.3rem 0.6rem;
            margin-left: 5px;
            font-size: 0.8rem;
        }
        .write-wrap > button {
            width: 100%; height: 40px !important; 
            font-size: 1rem;
            border: none;
            border-radius: 2px;
            color: #fff;
            border: 1px solid transparent;
            background-color: #12c2e9;  /* fallback for old browsers */
            background: linear-gradient(to left, #f64f59, #c471ed, #12c2e9);
            background-size: 400% 400%; 
            animation: gradationAni 7s ease infinite;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
            cursor: pointer;
        }
        .guest_general, .guest_admin {
            min-height: 70px;
        }
        ul>li.g-rp_general {
            margin: 0;
        }
        .g-rp_general, .g-rp_general ~ ul>li {
            border: 1px solid #fff;
            transition: border 0.3s ease;
        }
        .dark .g-rp_general, .dark .g-rp_general ~ ul>li{
            background-color: #242428;
            border: 1px solid #4f4f4f;
        }
        .g-comment-name {
            width: 80px;
            min-height: 30px;
            padding: 7px 0;
            font-size: 15px;
            white-space: nowrap;
            text-align: center;
            text-overflow: ellipsis;
            overflow: hidden;
            border: 1px solid #d7dde4;
            border-radius: 3px;
            background-color: #fff;
            box-shadow: rgb(0 0 0 / 10%) 0px 1px 2px 0px;
            transition: background-color 0.3s ease, color 0.3s ease, border 0.3s ease;
        }
        .dark .g-comment-name {
            border: 1px solid #fff;
            background-color: #3f3f45;
        }
        .g-comment-name > a {
            position: relative;
            top: 1px;
            padding: 0 2px;
        }

        .g-rp_general, .g-rp_general ~ ul>li{
            padding: 10px;
            background: #f2f2f2;
            border-radius: 3px;
            margin-top: 20px;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px 0px, rgba(0, 0, 0, 0.06) 0px 1px 2px 0px;
            transition: background-color 0.3s ease, color 0.3s ease, border 0.3s ease;
        }

        .g-rp_general ~ ul>li {
            margin-left: 30px;
            margin-top: 8px !important;
        }