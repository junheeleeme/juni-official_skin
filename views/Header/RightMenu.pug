div.right-menu
    button.theme-toggle
        i(class="bx bx-sm bx-moon")
    a.mobile-menu
        label(for="sideToggle") 
            i(class="bx bx-sm bx-menu")

    script(scoped).
        const saveTheme = localStorage.getItem('theme');
        if(saveTheme === null) {
            const theme = window.matchMedia("(prefers-color-scheme: dark)").matches;
            if(theme) {
                document.body.classList.add('dark')
                localStorage.setItem('theme', 'dark')
            } else {
                localStorage.setItem('theme', 'white')
            }
        } else if (saveTheme === 'dark') {
            document.body.classList.add('dark')
        } else {
            localStorage.setItem('theme', 'white')
        }
        
        const themeBtn = document.querySelector('.theme-toggle');

        themeBtn.addEventListener('click', ()=> {
            const _win = document.body.classList.contains('dark');
            if(!_win) {
                document.body.classList.add('dark')
                localStorage.setItem('theme', 'dark')
            } else {
                document.body.classList.remove('dark')
                localStorage.setItem('theme', 'white')
            }
        })

    style.
        .right-menu {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .bx-moon, .bx-menu { 
            transition: 0.4s; 
        }
        .dark .theme-toggle:hover .bx-moon { 
            color: #F6F54D !important; 
        }
        .theme-toggle:hover .bx-moon { 
            color: #9e3dff !important; 
        }
        .dark .theme-toggle:hover, .dark .mobile-menu:hover {
            background-color: rgba(255, 255, 255, 0.3) !important;
        }
        .dark .bx-moon { color: #9e3dff; }
        .mobile-menu { 
            display: none; 
            cursor: pointer;
        }
        .mobile-menu > label, .mobile-menu > label > i {
            cursor: pointer;
        }
        .theme-toggle, .mobile-menu{
            padding: 0.25rem;
            border: none;
            border-radius: 4px;
            background: none;
            box-shadow: none;
            margin-left: 0.5rem;
            transition: 0.4s;
        }
        .theme-toggle:hover, .mobile-menu:hover{
            box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px 0px, rgba(0, 0, 0, 0.06) 0px 1px 2px 0px;
        }
        .theme-toggle>label>i, .mobile-menu>label>i{
            padding-top: 2px;
        }
        .mobile-menu>label {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%; height: 100%;
        }
        @media screen and (max-width: 900px) {
            .mobile-menu { display: inline-flex; }
        }